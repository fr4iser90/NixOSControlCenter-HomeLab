# Cloudflare Account Settings                
CF_TOKEN={CF_TOKEN}

# Domain Configuration
TARGET_DOMAIN=${DOMAIN}
DOMAIN1=${DOMAIN}                 # Adjustable to more domains
DOMAIN1_ZONE_ID={DOMAIN_ZONE_ID}

# DNS Settings
